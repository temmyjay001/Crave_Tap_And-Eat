<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/orderbacko" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="226dp"
            android:layout_height="200dp"
            android:layout_below="@+id/r1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-100dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:contentPadding="15dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/barbecue" />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >
        <TextView
            android:id="@+id/orderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/segoeuibold"
            android:text="@string/order_item"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
        />
        <TextView
            android:id="@+id/orderRatingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderText"
            android:layout_marginTop="-2dp"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/segoeui"
            android:text="4.9"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
        />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderText"
            android:layout_alignStart="@+id/orderRatingText"
            android:layout_marginStart="30.5dp"
            android:layout_marginLeft="30.5dp"
            android:layout_marginTop="5dp"
            android:numStars="5"
            android:stepSize="1.0" />
    </RelativeLayout>
        <TextView
            android:id="@+id/foodDescriptionT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Description"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/segoeuibold"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/foodDescription"
            android:text="Camerarius historias ducunt ad amor.Cum equiso ire, omnes animalises demitto magnum, pius finises.Whisk one quarter cup of rice in eight and a half teaspoons of buttermilk."
            android:padding="20dp"
            />

    <Button
        android:id="@+id/addcart"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_order"
        android:layout_marginTop="20dp"
        android:text="Add to Cart"
        android:layout_gravity="center"/>




</LinearLayout>